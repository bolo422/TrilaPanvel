package br.com.panvel.gerenciador.servlet.listCompanies;

import jakarta.servlet.ServletException;
import jakarta.servlet.annotation.WebServlet;
import jakarta.servlet.http.HttpServlet;
import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;
import java.io.IOException;
import java.util.HashMap;
import java.util.List;
import java.util.Map;

import br.com.panvel.gerenciador.servlet.DataBase;

@WebServlet(urlPatterns="/remove-company")
public class RemoveCompanyServlet extends HttpServlet {
	private static final long serialVersionUID = 1L;

	@Override
	protected void service(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		DataBase.delCompany(Integer.valueOf(req.getParameter("id")));
		resp.sendRedirect("list-companies");
	}

}
